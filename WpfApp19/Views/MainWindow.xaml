<Window x:Class="WpfApp19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp19"
        xmlns:vm="clr-namespace:WpfApp19.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel Background="#FF6565DC">
        <TextBox Text="0" FontSize="15" FontFamily="Times New Roman" Foreground="Red" Margin="5"/>
        <TextBox Text="{Binding Number3}" FontSize="15" FontFamily="Times New Roman" Margin="5"/>
        <Button Content="Расчитать длинну окружности" Command="{Binding Path=AddCommand}" FontSize="15" Background="White" BorderBrush="White" Foreground="Red" Margin="5"/>
    </StackPanel>
</Window>

